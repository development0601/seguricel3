@model IEnumerable<Seguricel3.Models.DispositivoViewModels>
@{
   
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
}

<script type="text/javascript" src="~/Scripts/Seguricel-DataGrid.js"></script>

<div>
    @Html.Label(Resources.EtiquetasResource.labelDDLContrato, htmlAttributes: new { @class = "control-label col-md-2", onChange = "this.form.submit();" })
    
    <div class="col-md-10">
        @*@Html.DropDownListFor(m => m.GrupoID, Model.Grupos as SelectList, Resources.EtiquetasResource.labelSelectValue, htmlAttributes: new { @class = "form-control", onchange = "this.form.submit();" })*@
        @*@Html.DropDownList("ddlContratos", ViewBag.SelectContratos as SelectList, Resources.EtiquetasResource.labelSelectValue, htmlAttributes: new { @class = "form-control", onchange = "this.form.submit();" })*@
    </div>
</div>


<div>
    @*@Html.ActionLink(Resources.EtiquetasResource.labelNewLink, "Create", "Dispositivos", routeValues: new { tipoTabla = (eTipoTabla)ViewBag.TipoTabla }, htmlAttributes: new { @class = "btn btn-default place-right" })*@
    @Html.ActionLink(Resources.EtiquetasResource.labelNewLink, "Create", "Dispositivos", null, htmlAttributes: new { @class = "btn btn-default place-right" })
</div>
<div style="margin-top:60px; padding-top: 20px; border-top: 1px solid #000; width: 95%;">
    <table id="dataTable" class="dataTable" cellspacing="0" style="margin: auto;  width:100%; font-size: 12pt;">
        <thead>
            <tr>
                <th style="vertical-align: middle; width: 15%;">
                    @Html.DisplayNameFor(m => m.Serial)
                </th>
                <th style="text-align:center; width: 55%;">
                    @Html.DisplayNameFor(m => m.TipoDispositivo)
                </th>
                <th style="text-align:center; width: 20%;">
                    @Html.DisplayNameFor(m => m.Firmware )
                </th>
                <th style="width: 5%;"></th>
                <th style="width: 5%;"></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td colspan="5">&nbsp;</td>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="vertical-align: middle;">
                        @Html.DisplayFor(m => item.Serial)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.TipoDispositivo)
                    </td>
                    <td style="text-align: center;">
                        @*<a href="@Url.Action("Edit", "Tablas", routeValues: new { id = item.Id, tipoTabla = item.TipoTabla })"><span class="mif-pencil" title=@Resources.EtiquetasResource.labelEditLink></span></a>*@
                        <a href="@Url.Action("Edit", "Dispositivos")"><span class="mif-pencil" title=@Resources.EtiquetasResource.labelEditLink></span></a>
                    </td>
                    <td style="text-align: center;">
                        <a href="@Url.Action("Delete", "Dispositivos")" onclick="return confirm('@item.Serial @Resources.EtiquetasResource.DeleteConfirmMessage');"><span class="mif-bin" title=@Resources.EtiquetasResource.labelDeleteLink></span></a>
                        @*<a href="@Url.Action("Delete", "Tablas", routeValues: new { id = item.Id, tipoTabla = item.TipoTabla })" onclick="return confirm('@item.Nombre @Resources.EtiquetasResource.DeleteConfirmMessage');"><span class="mif-bin" title=@Resources.EtiquetasResource.labelDeleteLink></span></a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


